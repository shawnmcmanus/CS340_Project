<h1>Departments</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <thead>
    <tr>
      <th>Name</th>
      <th>Budget</th>
      <th>Employees</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each departments}}
      <tr>
        <td>{{department_name}}</td>
        <td>${{budget}}</td>
        <td>
          {{#if employees.length}}
            <ul>
              {{#each employees}}
                <li>{{employee_name}}</li>
              {{/each}}
            </ul>
          {{else}}
            No employees
          {{/if}}
        </td>
        <td>
          <form action="/delete-department/{{department_id}}" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this department?')">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>