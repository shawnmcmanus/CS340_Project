<h1>Payrolls</h1>

<table border="1">
  <thead>
    <tr>
      <th>Employee</th>
      <th>Pay Period</th>
      <th>Pay Date</th>
      <th>Gross Pay</th>
      <th>Deduction</th>
      <th>Net Pay</th>
    </tr>
  </thead>
  <tbody>
    {{#each payrolls}}
      <tr>
        <td>{{this.first_name}} {{this.last_name}}</td>
        <td>{{this.pay_period}}</td>
        <td>{{this.pay_date}}</td>
        <td>{{this.gross_pay}}</td>
        <td>{{this.deduction}}</td>
        <td>{{this.net_pay}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>

<h2>Add New Payroll</h2>
<form action="/payrolls" method="POST">
  <label for="employee_id">Employee:</label>
  <select name="employee_id" required>
    {{#each employees}}
      <option value="{{this.employee_id}}">{{this.first_name}} {{this.last_name}}</option>
    {{/each}}
  </select><br>

  <label for="pay_period">Pay Period:</label>
  <input type="date" name="pay_period" required><br>

  <label for="pay_date">Pay Date:</label>
  <input type="date" name="pay_date" required><br>

  <label for="gross_pay">Gross Pay:</label>
  <input type="number" step="0.01" name="gross_pay"><br>

  <label for="deduction">Deduction:</label>
  <input type="number" step="0.01" name="deduction"><br>

  <label for="net_pay">Net Pay:</label>
  <input type="number" step="0.01" name="net_pay"><br>

  <input type="submit" value="Add Payroll">
</form>
