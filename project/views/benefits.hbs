<h1>Benefits</h1>

<table border="1" cellpadding="8" cellspacing="0">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Cost</th>
    <th>Provider</th>
    <th>Actions</th>
  </tr>
  {{#each data}}
  <tr>
    <td>{{benefit_name}}</td>
    <td>{{description}}</td>
    <td>{{cost}}</td>
    <td>{{provider}}</td>
    <td>
      <form action="/employees/update/{{employee_id}}" method="POST" style="display:inline;">
        <button type="submit">Update</button>
      </form>
      
      <form action="/employees/{{emloyee_id}}/delete" method="POST" style="display:inline;" 
      onsubmit="return confirm('Are you sure you want to delete this employee?');">
        <button type="submit">Delete</button>
      </form>
    </td>
  </tr>
  {{/each}}
</table>

<h2>Add a New Benefit</h2>
<form action="/benefits" method="POST">
  <label for="benefit_name">Name:</label>
  <input type="text" id="benefit_name" name="benefit_name" required><br>

  <label for="description">Description:</label>
  <input type="text" id="description" name="description"><br>

  <label for="cost">Cost:</label>
  <input type="number" id="cost" name="cost" step="0.01"><br>

  <label for="provider">Provider:</label>
  <input type="text" id="provider" name="provider"><br>

  <button type="submit">Add Benefit</button>
</form>